mixin pet(name)
  li.pet= name
ul
  +pet('cat')
  +pet('dog')

mixin article(title)
  .article
    .article-wrapper
      h4= title
      if block
        block
      else
        p No content provided.
+article('Hello, world.')
+article('Hello, jade.')
  p This is my
  p Amazing article.

mixin link(href, name)
  //- attributes == {class: "btn"}
  a(class!=attributes.class, href= href)= name
+link('/Key', 'Foxth')(class="btn")

mixin link(href, name)
  a(href=href)&attributes(attributes)= name
+link('/Key', 'Foxth')(class="btn")

mixin list(id, ...items)
  ul(id=id)
    each item in items
      li= item
+list('my-list', 1, 2, 3, 4, 5)
